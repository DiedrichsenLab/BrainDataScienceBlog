journal = {Human Brain Mapping},
keywords = {Anatomy,Cerebellum,Highfield,Homunculus,Movement},
number = {11},
title = {{Evidence for a motor somatotopy in the cerebellar dentate nucleus-An fMRI study in humans}},
volume = {33},
