keywords = {Bimanual coordination,Corpus callosum,Discrete movements,Interhemispheric connection,Rhythmic movements,Subcortical coupling},
number = {4},
title = {{Intermanual interactions during initiation and production of rhythmic and discrete movements in individuals lacking a corpus callosum}},
volume = {176},
year = {2007}
}
